@using Dotnet.MVC.Razor.Keycloak.Data.Entities

@model ReleaseNote

@{
    ViewBag.Title = "Delete Release Note";
}

<h2>Delete Confirmation</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this release note?
</div>

<dl class="row">
    <dt class="col-sm-2">Version</dt>
    <dd class="col-sm-10">@Model.Version</dd>

    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Released</dt>
    <dd class="col-sm-10">@Model.ReleaseDate.ToShortDateString()</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
