@using Dotnet.MVC.Razor.Keycloak.Logics
@using Dotnet.MVC.Razor.Keycloak.Models.ViewModels

@inject IReleaseNoteRepository ReleaseNoteService
@inject IMarkdownRenderer MarkdownRenderer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC Razor Keycloak</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/markdown/css/github-markdown.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />

    <link rel="stylesheet" href="~/lib/toastr/css/toastr.min.css" />

    <style>
        .markdown-body {
            font-family: system-ui;
        }
    </style>

</head>

<body>
    <header>
        <!-- Floating Feedback Button -->
        <button id="open-feedback-btn" class="btn btn-primary rounded-circle shadow position-fixed" style="bottom: 30px; right: 30px; z-index: 1050;">
            <i class="fa fa-comment-dots"></i>
        </button>


        <!-- Global Loader -->
        @*    <div id="page-loader" class="position-fixed w-100 h-100 bg-white d-flex justify-content-center align-items-center" style="z-index: 2000; display: none;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div> *@

        @* --------------------------------------------------------------------------------------------------------------------- *@

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MVC Razor Keycloak</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @*    @if (User is not null && (User.IsInRole("Admin") || User.IsInRole("Support")))
                        {
                            <li class="nav-item">
                                <a class="nav-link d-flex justify-content-between align-items-center" asp-controller="AdminFeedback" asp-action="Index">
                                    <span><i class="fa fa-comments me-1"></i> Feedback</span>
                                    @if (ViewBag.NewFeedbackCount > 0)
                                    {
                                        <span class="badge bg-danger">@ViewBag.NewFeedbackCount</span>
                                    }
                                </a>
                            </li>
                        } *@

                        <li class="nav-item">
                            <a class="nav-link d-flex justify-content-between align-items-center" asp-controller="AdminFeedback" asp-action="Index">
                                <span><i class="fa fa-comments me-1"></i> Feedback</span>
                                @if (ViewBag.NewFeedbackCount > 0)
                                {
                                    <span class="badge bg-danger">@ViewBag.NewFeedbackCount</span>
                                }
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ReleaseNotes" asp-action="Index">Versions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AdminReleaseNotes" asp-action="Index">Release Admin</a>
                        </li>
                    </ul>
                    <div>
                        <form asp-controller="Auth" asp-action="Logout" method="post">
                            <button class="btn btn-primary" type="submit">Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @await Html.PartialAsync("_ToastNotifications")
            @{
                var userId = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                ReleaseNoteViewModel? latest;

                if (userId != null)
                {
                    var latestNote = await ReleaseNoteService.GetLatestAsync();
                    if (latestNote != null && !await ReleaseNoteService.HasUserSeenLatestAsync(userId))
                    {
                        latest = new ReleaseNoteViewModel
                    {
                        Id = latestNote.Id,
                        Version = latestNote.Version,
                        Title = latestNote.Title,
                        HtmlContent = MarkdownRenderer.ToHtml(latestNote.ContentMarkdown),
                        ReleaseDate = latestNote.ReleaseDate
                    };

                        @await Html.PartialAsync("_ReleaseNoteBanner", latest)
                    }
                }
            }
            @RenderBody()
            @await Html.PartialAsync("_FeedbackSidebar")
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Dotnet MVC Razor Keycloak - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr/js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(document).on('submit', 'form', function () {
            $('#page-loader').show();
        });

        $(document).on('click', 'a', function (e) {
            const href = $(this).attr('href');
            if (href && href !== "#" && !href.startsWith("javascript") && !$(this).attr("target")) {
                $('#page-loader').show();
            }
        });

        $(window).on('load', function () {
            $('#page-loader').fadeOut();
        });
    </script>
</body>
</html>
