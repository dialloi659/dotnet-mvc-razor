@using Dotnet.MVC.Razor.Keycloak.Logics
@using Dotnet.MVC.Razor.Keycloak.Models.ViewModels

@inject IReleaseNoteRepository ReleaseNoteService
@inject IMarkdownRenderer MarkdownRenderer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC Razor Keycloak</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/markdown/css/github-markdown.min.css" />
    @* <link rel="stylesheet" href="~/lib/fontawsome/css/all.min.css" /> *@
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />

    <link rel="stylesheet" href="~/lib/toastr/css/toastr.min.css" />

    <style>
        .markdown-body {
            font-family: system-ui;
        }
    </style>

</head>

<body>
    <header>
        @{
            var userId = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            ReleaseNoteViewModel? latest;

            if (userId != null)
            {
                var latestNote = await ReleaseNoteService.GetLatestAsync();
                if (latestNote != null && !await ReleaseNoteService.HasUserSeenLatestAsync(userId))
                {
                    latest = new ReleaseNoteViewModel
                    {
                        Id = latestNote.Id,
                        Version = latestNote.Version,
                        Title = latestNote.Title,
                        HtmlContent = MarkdownRenderer.ToHtml(latestNote.ContentMarkdown),
                        ReleaseDate = latestNote.ReleaseDate
                    };

                    @await Html.PartialAsync("_ReleaseNoteBanner", latest)
                }
            }
        }


        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MVC Razor Keycloak</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ReleaseNotes" asp-action="Index">Versions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AdminReleaseNotes" asp-action="Index">Release Admin</a>
                        </li>
                    </ul>
                    <div>
                        <form asp-controller="Auth" asp-action="Logout" method="post">
                            <button class="btn btn-primary" type="submit">Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @await Html.PartialAsync("_ToastNotifications")
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Dotnet MVC Razor Keycloak - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr/js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
